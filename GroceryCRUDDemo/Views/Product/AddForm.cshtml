@model List<Category>
@{
    ViewData["Title"] = "AddForm";
}

<h1>Add Form</h1>

<form method="post" action="/product/add">
    Name: <input type ="text" name="name" value="@ViewBag.Name"/>
    <span style="font-weight:bold;color:red;">@ViewBag.NameMessage</span> <br/>
    Description: <input type="text" name="description" value="@ViewBag.Description" />
    <span style="font-weight:bold;color:red;">@ViewBag.DescMessage</span> <br/>
    Price: <input type="text" name="price" value="@ViewBag.Description"/>
    <span style="font-weight:bold;color:red;">@ViewBag.PriceMessage</span> <br/>
    Inventory: <input type="text" name="inventory" value="@ViewBag.Inventory" /> <br/>
    Category: 
    <select name="category">
        @foreach (Category cat in Model)
        {
            <option value="@cat.id">@cat.name</option>
        }
    </select>

    <input type="submit" value="Save" />
</form>